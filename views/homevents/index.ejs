<%- include('../partials/header') %>
<body>
    <% if (user) { %>
  <section id="user-profile">
    <div id="userProfile">
      <p id="uName"><%= user.name %></p>
      <p><%= user.email %></p>
      <p> Interests: Food, Rugby, THE Ohio State Buckeyes, Writing, & The Beach</p>
      <p> Ambitions: Coding, Piano, French, Boxing, Getting my damn books published</p>
  </div>
</section>
<br>
<br>
  <section class=homeventsList>
    <table id="list">
        <thead>
          <tr>
            <th>             </th>
            <th>Event<br>Date</th>
            <th>Event<br>Location</th>
            <th>Event<br>Type</th>
            <th>Event<br>Organizer</th>
            <th>             </th>
          </tr>
        </thead>
        <tbody>
            <% homevents.forEach(function(h) { %>
              <tr>
                <td><%= h.when %></td>
                <td><%= h.what %></td>
                <% h.result.forEach(function(id){ %>
                  <td><%= id.name %></td>
                  <br>
                  <td><%= id.address %></td>
                  <br>
                  <td><%= id.display_phone %></td>
                  <% }) %>
                  <td><%= user.name %></td>
                  <form action="/homevents/<%= h._id %>?_method=DELETE" method="POST">
                    <button type="submit">DELETE</button>
                  </form>
                <td><a href="/homevents/<%= h._id %>">DETAILS</a></td>
              </tr>
              <% }); %>
            </tbody>
        </table>
  </section>
  <% } else { %>
  <section>
    <h2>House of Medici enterprises welcomes you to YOUR FAMILY EVENTS</h2>
    <p>Here, your family will be able to plan and keep track of events that will make the fondest of memories.</p> 
    <p>It begins with your immediate family members but don't be afraid to add your favorite cousins, aunts, uncles, or even friends.</p>
    <br>
    <p>-Caleb Saleh</p>
    <br>
    <p>Chairman and CEO, HoM.e</p>
  </section>
  <% } %>
</body>
<%- include('../partials/footer') %>
